<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">

    <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">

      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Crie sua conta abaixo</p>

      <%- include('includes/messages') %>

      <div class="row mb-3">

        <div class="col-lg my-5">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
             <div class="form-group">
              <label class="col-sm-2 col-form-label">Email</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group">
              <label class="col-sm col-form-label">Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <br>
              <button type="submit" class="btn btn-primary">Criar minha conta</button>
            
            
          </form>
        
        </div>



        <div class="col-lg my-5">
          <h4>Entrar no sistema</h4>
          <p>Entre com os seus dados de acesso.</p>
          <form class="form-login" action="/login/login" method="post">

            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            
             <div class="form-group">
              <label class="col-sm-2 col-form-label">Email</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group">
              <label class="col-sm col-form-label">Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <br>
              <button type="submit" class="btn btn-primary">Entrar</button>
            
            
          </form>
        
        </div>

      </div>


      </div>
      <div class="col-lg-2"></div>

    </div>
    
  
  </div>

<%- include('includes/footer') %>

